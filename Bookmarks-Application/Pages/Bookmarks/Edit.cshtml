@page
@model Bookmarks_Application.Pages.Bookmarks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Bookmark</h1>

<hr />
<div class="row">
    <div class="col-6 mx-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bookmark.Id" />
            <div class="form-group my-2">
                <label asp-for="Bookmark.Title" class="control-label"></label>
                <input asp-for="Bookmark.Title" class="form-control" />
                <span asp-validation-for="Bookmark.Title" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Bookmark.Description" class="control-label"></label>
                <input asp-for="Bookmark.Description" class="form-control" />
                <span asp-validation-for="Bookmark.Description" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Bookmark.Url" class="control-label"></label>
                <input asp-for="Bookmark.Url" class="form-control" />
                <span asp-validation-for="Bookmark.Url" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary border w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary border" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
